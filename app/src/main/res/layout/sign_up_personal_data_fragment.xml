<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.signUp.SignUpPersonalDataFragment">


    <ImageView
        android:id="@+id/photoSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@tools:sample/avatars"
        android:src="@drawable/ic_thumb_up" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="name"
        android:id="@+id/et_nameSignUp"
        android:layout_below="@id/photoSignUp"/>

    <EditText
        android:id="@+id/et_dateOfBirthSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:hint="dateOfBirth"
        android:layout_below="@id/et_nameSignUp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_sexSignUp"
        android:inputType="text"
        android:hint="sex"
        android:layout_below="@id/et_dateOfBirthSignUp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textImeMultiLine"
        android:id="@+id/et_descriptionSignUp"
        android:hint="description"
        android:layout_below="@id/et_sexSignUp"/>



</RelativeLayout>